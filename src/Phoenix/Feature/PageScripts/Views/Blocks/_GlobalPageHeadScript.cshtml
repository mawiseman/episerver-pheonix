@using EPiServer.ServiceLocation
@using Feature.PageScripts.Services
@model EPiServer.Core.PageData
@{
    var globalPageScriptsService = ServiceLocator.Current.GetInstance<IPageScriptService>();

    var ignoreCache = false;
    Boolean.TryParse(Request.QueryString["ignoreCache"], out ignoreCache);
    var globalPageScriptsPage = globalPageScriptsService.GetGlobalPageScripts(ignoreCache);
}
@if (!string.IsNullOrEmpty(globalPageScriptsPage.GlobalPageScripts.PageHeadScript))
{
    @Html.Raw(globalPageScriptsPage.GlobalPageScripts.PageHeadScript)
}