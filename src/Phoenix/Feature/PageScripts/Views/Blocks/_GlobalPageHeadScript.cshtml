@using Feature.PageScripts.Models.Pages
@using EPiServer
@using EPiServer.Core
@using EPiServer.ServiceLocation
@using EPiServer.Web
@model EPiServer.Core.PageData
@{
    var contentLoader = ServiceLocator.Current.GetInstance<IContentLoader>();

    var startPage = contentLoader.Get<PageData>(SiteDefinition.Current.StartPage);

    if (!(startPage is IHasGlobalPageScripts) || EPiServer.Editor.PageEditing.PageIsInEditMode)
    {
        return;
    }

    var pageScripts = ((IHasGlobalPageScripts)startPage).GlobalPageScripts;
}
@if (!string.IsNullOrEmpty(pageScripts.PageHeadScript))
{
    @Html.Raw(pageScripts.PageHeadScript)
}